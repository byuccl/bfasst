rule bit_to_fasm
    command = PATH=$PATH:$xray_path $fasm2bels_python_path $bit_to_fasm_path --db-root $db_root --part $part $in >$out
    description = convert $in to fasm file

rule fasm_to_netlist
    command = cd $fasm2bels_path; $fasm2bels_python_path -mfasm2bels --allow_orphan_sinks --connection_database $part_db --db_root $db_root --part $part --fasm_file $in --verilog_file $verilog_file --xdc_file $xdc_file --input_xdc $input_xdc --logical_netlist $output_capnp_log --physical_netlist $output_capnp_phys --interchange_xdc $output_capnp_xdc --interchange_capnp_schema_dir $$INTERCHANGE_SCHEMA_PATH > $log_file 2>&1
    description = convert $in to netlist

